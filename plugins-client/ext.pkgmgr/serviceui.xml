<?xml version="1.0" encoding="UTF-8"?>
<a:application xmlns:a="http://ajax.org/2005/aml">
<a:vbox name='vbService' id="vbService" edge="1 1 1 1" validgroup="vgService" height="150">
  <a:hbox height="28" align="center">
    <a:label width="93" class="graylabel size-12 arial dark-bg">Service Name:</a:label>
    <a:textbox id="txtServiceName" skin="searchbox_textbox" class="dark-bg" flex="1" value="[{lstPkgMgr.selected}::@svrname]"/>
  </a:hbox>
  <a:hbox height="28" align="center">
    <a:label width="93" class="graylabel size-12 arial dark-bg">ExecPath:</a:label>
    <a:textbox id="txtServiceExec" skin="searchbox_textbox" class="dark-bg" flex="1" value="[{lstPkgMgr.selected}::@svrexec]"/>
  </a:hbox>
  <a:hbox height="28" align="center">
    <a:label width="93" class="graylabel size-12 arial dark-bg">Parameters:</a:label>
    <a:textbox id="txtServiceParams" skin="searchbox_textbox" class="dark-bg" flex="1" value="[{lstPkgMgr.selected}::@svrparams]"/>
  </a:hbox>
  <a:hbox height="28" align="center">
    <a:label width="93" class="graylabel size-12 arial dark-bg">oneshot:</a:label>
    <a:checkbox id="txtServiceOneshot" label="Oneshot" skin="checkbox_black" class="dark-bg" value="[{lstPkgMgr.selected}::@svroneshot]"/>
  </a:hbox>
  <a:hbox height="28" align="center">
    <a:label width="93" class="graylabel size-12 arial dark-bg">After:</a:label>
    <a:textbox id="txtServiceAfter" skin="searchbox_textbox" class="dark-bg" flex="1" value="[{lstPkgMgr.selected}::@svrafter]"/>
  </a:hbox>
  <a:hbox height="28" align="center">
    <a:label width="93" class="graylabel size-12 arial dark-bg">Hello world:</a:label>
    <a:textbox id="txtServiceTest" skin="searchbox_textbox" class="dark-bg" flex="1" value="[{lstPkgMgr.selected}::@svrtest]"/>
  </a:hbox>
</a:vbox>
</a:application>