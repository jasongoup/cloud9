<?xml version="1.0" encoding="UTF-8"?>
<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:hbox id="hbFileList" height="220" width="100%">
        <a:vbox height="100%" flex="1" minwidth="65%">
            <a:label width="100%" class="graylabel size-14 arial dark-bg"
                     align="left">Files to be installed:</a:label>
            <a:model id="mdlDD">
                <data>
                    <file name="usr/bin/ls" dest="/system/bin/" mode="0755"/>
                    <file name="usr/bin/busybox" dest="/system/bin/busybox.1" mode="0755"/>
                </data>
            </a:model>
            <a:vbox>
                <div id="divFileList" minheight="100" height="100">
                    <a:list id="lstFiles"
                            border="1"
                            left="0"

                            width="100%"
                            flex="1"
                            skin="filelist"
                            skinset="pkgmgr"
                            class="openfile rundebug"
                            autoselect="false"
                            canrename="true"
                            scrollbar="sbShared 1 2 0"
                            >
                        <a:each match='[file]'>
                            <a:css match="[@current]" value="active"/>
                            <a:caption match="[@name]"/>
                            <a:tooltip match="[@dest]"/>
                        </a:each>
                    </a:list>
                </div>
                <a:splitter id="stFileInfo"/>
                <div>
                    <a:vbox padding="1">
                        <a:label>Source file or directory name</a:label>
                        <a:textbox></a:textbox>
                        <a:label>Destination in target platform</a:label>
                        <a:textbox></a:textbox>
                        <a:hbox>
                            <a:label>Owner</a:label><a:textbox></a:textbox>
                        </a:hbox>
                        <a:hbox>
                            <a:label>Group</a:label><a:textbox></a:textbox>
                        </a:hbox>
                        <a:hbox>
                            <a:label>Mode</a:label><a:textbox></a:textbox>
                        </a:hbox>
                    </a:vbox>
                </div>
            </a:vbox>
        </a:vbox>
        <a:vbox class="gray" height="100%" edge="50 0 0 5" align="right"
                padding="10">
            <a:button skin="button-colorless" class="lightBlue filesbutton"
                      id="btnAddFile" caption="Add" onclick="filepage.replaceMarkup (vbAddFile)"/>
            <!--a:button skin="button-colorless" class="lightBlue filesbutton"
                      id="btnAddFile" caption="Add" onclick="require('ext/pkgmgr/pkgmgr').addFileToPkg()"/ -->
            <a:button skin="button-colorless" class="lightBlue filesbutton"
                      id="btnChangeFile" width="80" caption="Modify"/>
        </a:vbox>
    </a:hbox>
</a:application>