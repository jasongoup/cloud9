<a:application xmlns:a="http://ajax.org/2005/aml">
	<a:window id = "pjWizardDialog"
           title = "New Project"
          center = "true"
	   left = "500"
           width = "505"
          height = "400"
       resizable = "false"
         kbclose = "true"
         buttons = "close"
		   skin = "window_classicW"
		   modal = "false"
       draggable = "true">
	   
		<a:pages id="wizardTab1" width="505" >
			 <a:page style="position:static; height:300px;">
            <img src="/static/ext/main/style/images/top_installer.png" />
            <a:label 
              skin  = "label_classicW"
              style = "font-weight:bold;"
              top   = "5"
              left  = "20">New Project Wizard</a:label>
            <a:label 
              skin  = "label_classicW"
              width = "250"
              top   = "25"
              left  = "25">Please select a type that you want create</a:label>

 <!--
            <a:text
              id="lol"
              skin   = "text_classicW"
              left   = "22"
              top    = "100"
              width  = "455"
              height = "160"
              value  = "[text()]"
             ></a:text>
            <a:label 
              skin  = "label_classicW"
              width = "420"
              top   = "270"
              left  = "22"></a:label>
-->
			   <a:list id="newProjectType" 
					   width="99%"
					   height="240"
					   style = "padding:10px 10px 10px 30px; background-color:#FFFFFF"
					   >
												
			   	<a:each match="[data]">
       			    <a:caption match="[@name]" />
					<a:icon value="project.png" />
    			</a:each>
                </a:list>
        </a:page>
		
		 <a:page caption="Choose install location" style="position:static; height:300px;">
             <img src="/static/ext/main/style/images/top_installer.png" />
            <a:label 
              skin  = "label_classicW"
              style = "font-weight:bold;font-size: 12px;"
              top   = "5"
              left  = "20">Create a Project</a:label>
	
            <a:label 
              skin  = "label_classicW"
	        style = "font-weight:normal;font-size: 12px;"
              width = "250"
              top   = "25"
              left  = "25">Enter a project name</a:label>
	<!--
            <a:label 
              skin  = "label_classicW"
	      style = "font-weight:normal;font-size: 12px;"
              width = "440"
              top   = "74"
              left  = "22">Setup will install Ajax.org Platform v3.0.0 in the following folder. To install in different folder, click
              Browse and select another folder. Click Install to start the installation.</a:label>
	-->   

	<a:hbox height = "28" edge="0 0 0 30" top = "110" padding="1">
              <a:label 
		left  = "30"
		width ="85"
		style = "font-weight:normal;font-size: 12px;"
		skin  = "label_classicW"
		>project name:
		</a:label>
                <a:textbox id="newProjectName"
                   skin   = "textbox_classicW" 
		   flex="1"
                   value=""
		   width = "350"
                   />
        </a:hbox>

 	<a:hbox height = "28" edge="20 0 0 30" top = "140" padding="1">


		 <a:checkbox id="Copycheckbox"  label=""  skin="checkbox_black" value="true"/>

		   <a:label 
                width ="300"
                skin  = "label_classicW"
		style = "font-weight:normal;font-size: 14px;"
                >copy demo to the destfolder
                </a:label>



        </a:hbox>



        </a:page>
		
		</a:pages>
	
	
	<a:label 
      skin  = "label_classicW"
      class = "lblShadow"
      width = "505"
      top   = "310"
      left  = "0"><hr class="white" /><hr class="gray" /></a:label>


    <a:button skin = "button_classicW"
      	   caption = "Back"
		   visible = "{wizardTab1.activepage > 0}"
           onclick = "wizardTab1.set(wizardTab1.activepage-1)"
             width = "75"
              left = "245"
      		   top = "327">
	</a:button>
	
	<a:button 
      onclick = "wizardTab1.set(wizardTab1.activepage == 0 ? wizardTab1.activepage + 1 : require('ext/project/project_page').createProject(newProjectName.value))"
      skin    = "button_classicW"
      width   = "75" 
      left    = "320"
      top     = "327"
      caption = "{wizardTab1.activepage == 0 ? 'Next' : 'Finish'}">
   </a:button>
    </a:window>
	<!-- commint page -->
	
	<a:window id = "gitCommitPage"
           title = "Commit"
           center = "true"
	   left = "500"
           width = "600"
           height = "600"
       	   draggable = "true"
	   resizable = "false"
           kbclose = "true"
           buttons = "close"
	>
	   
		<a:hbox width="100%" height="30">
		<a:label >Message:</a:label>
		</a:hbox>
		<a:textarea skin="textarea_pj" width="100%" id="commitTxt" height="80"/>
			
		

		
		<a:hbox width="90%" height="30">
		
		<a:label>changes made</a:label>
		</a:hbox>
	 	<a:datagrid 	id="commitFiles"
				skin="dgcheck"
				mode="check"
				height = "200"
                                flex="1"
                                autoselect="false"
                                canrename="false"
                                scrollbar="sbShared 1 2 0"
				empty-message = "No data"
                                >
                            <!--<div><span>title</span><span>version</span></div>-->
				<a:each match='[files]'>
				<a:column width="42%" value="[@select]"   caption="selected"  check="true" /> 
                                <a:column width="40%" value="[@name]"     caption="filename/folder name" />
				<a:column width="18%" value="[@status]"   caption="Status" />
                            </a:each>
							
                        </a:datagrid>
	
	<a:hbox height = "28" edge="10 0 0 0"  padding="1">
		<a:checkbox 
		id     = "ch1" 
      		skin="checkbox_black"                 
      		values = "full|empty"
		checked="true"></a:checkbox>
	  	<a:label 
                width ="300"
                skin  = "label_classicW"
                style = "font-weight:normal;font-size: 14px;"
                >select / deselect all
          	</a:label>
	</a:hbox>
	<a:hbox height = "28" edge="10 0 0 0"  padding="1">
                <a:checkbox 
                id     = "ch2" 
                skin="checkbox_black"                 
                values = "full|empty"
		checked="true"></a:checkbox>
                <a:label 
                width ="300"
                skin  = "label_classicW"
                style = "font-weight:normal;font-size: 14px;"
                > commit to  the remote server
                </a:label>
        </a:hbox>


	<a:button   onclick ="require('ext/project/project_page').gitCommit()" width="80" style="float:right;">Commit</a:button>
	</a:window>

	<a:window id = "gitRemotePage"
           title = "remotecommit"
           center = "true"
	   left = "500"
           width = "600"
           height = "150"
       	   draggable = "true"
	   resizable = "false"
           kbclose = "true"
           buttons = "close"
	>
	   
	<a:hbox width="100%" height="30">
	<a:label >RemoteUrl:</a:label>
	</a:hbox>
	<a:textbox  skin="searchbox_textbox"  width="100%" id="remoteurlTxt" height="30"/>
	<a:button  onclick ="gitRemotePage.hide()"  width="80" style="float:right">OK</a:button>

	</a:window>



</a:application>
